<div class="container mx-auto my-8 max-w-lg">
    <!-- Profile Header -->
    <div class="bg-blue-600 text-white rounded-t-lg p-6 text-center">
      <h1 class="text-3xl font-bold">Admin Profile</h1>
      <p class="mt-2 text-lg">Welcome, <%= admin.name %>!</p>
    </div>
  
    <!-- Profile Information Card -->
    <div class="bg-white shadow-lg rounded-b-lg p-6">
      <div class="mb-4">
        <h2 class="text-xl font-semibold text-gray-800">Profile Details</h2>
      </div>
  
      <div class="text-gray-700">
        <p class="py-2"><strong>Name:</strong> <%= admin.name %></p>
        <p class="py-2"><strong>Email:</strong> <%= admin.email %></p>
        <p class="py-2"><strong>Phone:</strong> <%= admin.phone ? admin.phone : 'Not provided' %></p>
        <p class="py-2"><strong>Address:</strong> <%= admin.address ? admin.address : 'Not provided' %></p>
      </div>
  
      <!-- Action Buttons -->
      <div class="mt-6 flex justify-between">
        <!-- Edit Profile Button -->
        <a href="/profile/edit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 edit-btn">
          Edit Profile
        </a>
  
        <!-- View Order History Button -->
        <a href="/customer/orders" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">
          View Order History
        </a>
        
        <!-- View All Orders Button (For Admin) -->
        <a href="/admin/orders" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">
          View All Orders
        </a>
      </div>
    </div>
  </div>
  